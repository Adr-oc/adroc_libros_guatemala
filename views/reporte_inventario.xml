<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="adroc_reporte_inventario">
        <t t-call="web.html_container">
            <div class="header">
                <div class="row">
                    <div class="o_background_header">
                        <div class="row col-xs-12">
                            <div class="col-1">
                                <div class="text-left">
                                    <div>
                                        <img t-if="current_company_id.logo" t-att-src="image_data_uri(current_company_id.logo_web)" class="text-right" alt="Logo"/>
                                        <div class="w-100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center col-11">
                                <div class="text-center">
                                    <div>
                                        <h6 style="font-size: 13px !important;"><span t-esc="current_company_id.name"/></h6>
                                        <h6 style="font-size: 10px !important;"><span t-esc="current_company_id.company_registry"/></h6>
                                        <h6 style="font-size: 10px !important;"><span t-esc="current_company_id.vat"/></h6>
                                        <h6 style="font-size: 10px !important;">Libro inventario</h6>
                                        <h6 style="font-size: 10px !important;">Fecha Hasta: <span t-esc="data['fecha_hasta']" t-options='{"widget": "date"}'/></h6>
                                        <h6 style="font-size: 10px !important;">Expresado en GTQ</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer">
                <div class="row">
                    <div class="col-12">
                        <ul class="text-center">
                            <li t-if="current_company_id.street" class="list-inline-item d-inline" style="font-size: 10px !important;">
                                <span t-field="current_company_id.street"/> <span t-field="current_company_id.street2"/>
                            </li>
                            <li t-if="current_company_id.website" class="list-inline-item d-inline" style="font-size: 10px !important;">
                                <span t-field="current_company_id.website"/>
                            </li>
                        </ul>
                        <t t-set="data_report_page_offset" t-value="data['folio_inicial']+1"/>
                        <h6 class="text-right" style="font-size: 10px !important;">Folio: <span class="page" t-esc="data['folio_inicial']-1"></span></h6>
                    </div>
                </div>
            </div>
            <t t-set="data_report_margin_top" t-value="45"/>
            <t t-set="data_report_header_spacing" t-value="35"/>

            <t t-call="web.external_layout">
                <div class="page" style="font-size: 8px !important;">
                    <t t-set="result" t-value="lineas(data)"/>
                    <t t-set="total_activo" t-value="0"/>
                    <t t-set="total_pasivo" t-value="0"/>
                    <t t-set="total_capital" t-value="0"/>

                    <table class="table table-sm" style="width:100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background-color: #e0e0e0;">
                                <th style="border: 1px solid #ccc; padding: 3px;">Cuenta</th>
                                <th style="border: 1px solid #ccc; padding: 3px;">Descripcion</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 3px;">Inicial</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 3px;">Debe</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 3px;">Haber</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 3px;">Saldos</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- ACTIVO -->
                            <tr style="background-color: #d5e8d4;">
                                <td colspan="6" style="border: 1px solid #ccc; padding: 5px;"><b>ACTIVO</b></td>
                            </tr>
                            <tr t-foreach="result['lineas']['activo']" t-as="activo" t-attf-style="background-color: {{ '#ffffff' if activo_index % 2 == 0 else '#f9f9f9' }};">
                                <td style="border: 1px solid #ddd; padding: 2px;"><span t-esc="activo['codigo']"/></td>
                                <td style="border: 1px solid #ddd; padding: 2px;"><span t-esc="activo['cuenta']"/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="activo['saldo_inicial']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="activo['debe']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="activo['haber']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="activo['saldo_final']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <t t-set="total_activo" t-value="total_activo + activo['saldo_final']" t-options='{"widget": "float", "precision": 2}'/>
                            </tr>
                            <tr style="background-color: #d5e8d4; font-weight: bold;">
                                <td colspan="5" class="text-right" style="border: 1px solid #ccc; padding: 3px;"><b>Total activo</b></td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <b><span t-esc="total_activo" t-options='{"widget": "float", "precision": 2}'/></b>
                                </td>
                            </tr>
                            <!-- PASIVO -->
                            <tr style="background-color: #f8cecc;">
                                <td colspan="6" style="border: 1px solid #ccc; padding: 5px;"><b>PASIVO</b></td>
                            </tr>
                            <tr t-foreach="result['lineas']['pasivo']" t-as="pasivo" t-attf-style="background-color: {{ '#ffffff' if pasivo_index % 2 == 0 else '#f9f9f9' }};">
                                <td style="border: 1px solid #ddd; padding: 2px;"><span t-esc="pasivo['codigo']"/></td>
                                <td style="border: 1px solid #ddd; padding: 2px;"><span t-esc="pasivo['cuenta']"/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="pasivo['saldo_inicial']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="pasivo['debe']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="pasivo['haber']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="pasivo['saldo_final']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <t t-set="total_pasivo" t-value="total_pasivo + pasivo['saldo_final']" t-options='{"widget": "float", "precision": 2}'/>
                            </tr>
                            <tr style="background-color: #f8cecc; font-weight: bold;">
                                <td colspan="5" class="text-right" style="border: 1px solid #ccc; padding: 3px;"><b>Total pasivo</b></td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <b><span t-esc="total_pasivo" t-options='{"widget": "float", "precision": 2}'/></b>
                                </td>
                            </tr>
                            <!-- CAPITAL -->
                            <tr style="background-color: #dae8fc;">
                                <td colspan="6" style="border: 1px solid #ccc; padding: 5px;"><b>CAPITAL</b></td>
                            </tr>
                            <tr t-foreach="result['lineas']['capital']" t-as="capital" t-attf-style="background-color: {{ '#ffffff' if capital_index % 2 == 0 else '#f9f9f9' }};">
                                <td style="border: 1px solid #ddd; padding: 2px;"><span t-esc="capital['codigo']"/></td>
                                <td style="border: 1px solid #ddd; padding: 2px;"><span t-esc="capital['cuenta']"/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="capital['saldo_inicial']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="capital['debe']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="capital['haber']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="capital['saldo_final']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <t t-set="total_capital" t-value="total_capital + capital['saldo_final']" t-options='{"widget": "float", "precision": 2}'/>
                            </tr>
                            <tr style="background-color: #dae8fc; font-weight: bold;">
                                <td colspan="5" class="text-right" style="border: 1px solid #ccc; padding: 3px;"><b>Total capital</b></td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <b><span t-esc="total_capital" t-options='{"widget": "float", "precision": 2}'/></b>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
