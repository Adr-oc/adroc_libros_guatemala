<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="adroc_reporte_ventas">
        <t t-call="web.html_container">
            <div class="header">
                <div class="row">
                    <div class="o_background_header">
                        <div class="row col-xs-12">
                            <div class="col-1">
                                <div class="text-left">
                                    <div>
                                        <img t-if="current_company_id.logo" t-att-src="image_data_uri(current_company_id.logo_web)" class="" alt="Logo"/>
                                        <div class="w-100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center col-11">
                                <div class="text-center">
                                    <div>
                                        <h6 style="font-size: 13px !important;"><span t-esc="current_company_id.name"/></h6>
                                        <h6 style="font-size: 10px !important;"><span t-esc="current_company_id.company_registry"/></h6>
                                        <h6 style="font-size: 10px !important;"><span t-esc="current_company_id.vat"/></h6>
                                        <h6 style="font-size: 10px !important;">Libro de Ventas</h6>
                                        <h6 style="font-size: 10px !important;">Fecha Hasta: <span t-esc="data['fecha_hasta']" t-options='{"widget": "date"}'/></h6>
                                        <h6 style="font-size: 10px !important;">Expresado en GTQ</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer">
                <div class="row">
                    <div class="col-12">
                        <ul class="text-center">
                            <li t-if="current_company_id.street" class="list-inline-item d-inline" style="font-size: 10px !important;">
                                <span t-field="current_company_id.street"/> <span t-field="current_company_id.street2"/>
                            </li>
                            <li t-if="current_company_id.website" class="list-inline-item d-inline" style="font-size: 10px !important;">
                                <span t-field="current_company_id.website"/>
                            </li>
                        </ul>
                        <t t-set="data_report_page_offset" t-value="data['folio_inicial']+1"/>
                        <h6 class="" style="font-size: 10px !important;">Folio: <span class="page" t-esc="data['folio_inicial']-1"></span></h6>
                    </div>
                </div>
            </div>
            <t t-set="data_report_margin_top" t-value="45"/>
            <t t-set="data_report_header_spacing" t-value="35"/>

            <t t-call="web.external_layout">
                <div class="page" style="font-size: 8px !important;">
                    <t t-set="result" t-value="lineas(data)"/>

                    <table style="width:100%">
                        <thead>
                            <tr>
                                <th>Tipo</th>
                                <th>Fecha</th>
                                <th>Serie</th>
                                <th>Numero</th>
                                <th>Cliente</th>
                                <th>NIT</th>
                                <th class="text-right">Vent.</th>
                                <th class="text-right">Vent. Exe.</th>
                                <th class="text-right">Serv.</th>
                                <th class="text-right">Serv. Exe.</th>
                                <th class="text-right">Exp.</th>
                                <th class="text-right">IVA</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="result['lineas']" t-as="l">
                                <td><span t-esc="l['tipo']"/></td>
                                <td><span t-esc="l['fecha']" t-options='{"widget": "date"}'/></td>
                                <td><span t-esc="l['serie']"/></td>
                                <td><span t-esc="l['numero']"/></td>
                                <td><span t-esc="l['cliente']"/></td>
                                <td><span t-esc="l['nit']"/></td>
                                <td class="text-right"><span t-esc="l['compra']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="l['compra_exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="l['servicio']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="l['servicio_exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="l['importacion']+l['importacion_exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="l['iva']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="l['total']" t-options='{"widget": "float", "precision": 2}'/></td>
                            </tr>
                            <tr>
                                <td></td><td></td><td></td><td></td>
                                <td><b>Totales</b></td>
                                <td></td>
                                <td class="text-right" style="border-top: 1px double; border-bottom: 4px double; width:70px">
                                    <span t-esc="result['totales']['compra']['neto']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border-top: 1px double; border-bottom: 4px double; width:70px">
                                    <span t-esc="result['totales']['compra']['exento']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border-top: 1px double; border-bottom: 4px double; width:70px">
                                    <span t-esc="result['totales']['servicio']['neto']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border-top: 1px double; border-bottom: 4px double; width:70px">
                                    <span t-esc="result['totales']['servicio']['exento']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border-top: 1px double; border-bottom: 4px double; width:70px">
                                    <span t-esc="result['totales']['importacion']['neto']+result['totales']['importacion']['exento']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border-top: 1px double; border-bottom: 4px double; width:70px">
                                    <span t-esc="result['totales']['compra']['iva'] + result['totales']['servicio']['iva'] + result['totales']['importacion']['iva']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border-top: 1px double; border-bottom: 4px double; width:70px">
                                    <span t-esc="result['totales']['compra']['total'] + result['totales']['servicio']['total'] + result['totales']['importacion']['total']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <table>
                        <tbody>
                            <tr>
                                <td>Cantidad de facturas:</td>
                                <td class="text-right"><span t-esc="'{0:,.0f}'.format(result['totales']['num_facturas'])"/></td>
                            </tr>
                            <tr>
                                <td>Total debito fiscal:</td>
                                <td class="text-right">
                                    <span t-esc="result['totales']['compra']['iva'] + result['totales']['servicio']['iva'] + result['totales']['importacion']['iva']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div><strong>Resumen:</strong></div>
                    <table style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th class="text-right">Exento</th>
                                <th class="text-right">Neto</th>
                                <th class="text-right">IVA</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Ventas</td>
                                <td class="text-right"><span t-esc="result['totales']['compra']['exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="result['totales']['compra']['neto']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="result['totales']['compra']['iva']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="result['totales']['compra']['total']" t-options='{"widget": "float", "precision": 2}'/></td>
                            </tr>
                            <tr>
                                <td>Servicios</td>
                                <td class="text-right"><span t-esc="result['totales']['servicio']['exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="result['totales']['servicio']['neto']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="result['totales']['servicio']['iva']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="result['totales']['servicio']['total']" t-options='{"widget": "float", "precision": 2}'/></td>
                            </tr>
                            <tr>
                                <td>Exportaciones</td>
                                <td class="text-right"><span t-esc="result['totales']['importacion']['exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="result['totales']['importacion']['neto']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="result['totales']['importacion']['iva']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right"><span t-esc="result['totales']['importacion']['total']" t-options='{"widget": "float", "precision": 2}'/></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>Totales</td>
                                <td style="border-top: 1px double; border-bottom: 4px double; width:125px" class="text-right">
                                    <span t-esc="result['totales']['compra']['exento'] + result['totales']['servicio']['exento'] + result['totales']['importacion']['exento']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td style="border-top: 1px double; border-bottom: 4px double; width:125px" class="text-right">
                                    <span t-esc="result['totales']['compra']['neto'] + result['totales']['servicio']['neto'] + result['totales']['importacion']['neto']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td style="border-top: 1px double; border-bottom: 4px double; width:125px" class="text-right">
                                    <span t-esc="result['totales']['compra']['iva'] + result['totales']['servicio']['iva'] + result['totales']['importacion']['iva']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td style="border-top: 1px double; border-bottom: 4px double; width:125px" class="text-right">
                                    <span t-esc="result['totales']['compra']['total'] + result['totales']['servicio']['total'] + result['totales']['importacion']['total']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
