<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="adroc_reporte_ventas">
        <t t-call="web.html_container">
            <div class="header">
                <div class="row">
                    <div class="o_background_header">
                        <div class="row col-xs-12">
                            <div class="col-1">
                                <div class="text-left">
                                    <div>
                                        <img t-if="current_company_id.logo" t-att-src="image_data_uri(current_company_id.logo_web)" style="max-width: 80px; max-height: 60px; object-fit: contain;" alt="Logo"/>
                                        <div class="w-100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center col-11">
                                <div class="text-center">
                                    <div>
                                        <h6 style="font-size: 13px !important;"><span t-esc="current_company_id.name"/></h6>
                                        <h6 style="font-size: 10px !important;"><span t-esc="current_company_id.company_registry"/></h6>
                                        <h6 style="font-size: 10px !important;"><span t-esc="current_company_id.vat"/></h6>
                                        <h6 style="font-size: 10px !important;">Libro de Ventas</h6>
                                        <h6 style="font-size: 10px !important;">Fecha Hasta: <span t-esc="data['fecha_hasta']" t-options='{"widget": "date"}'/></h6>
                                        <h6 style="font-size: 10px !important;">Expresado en GTQ</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer">
                <div class="row">
                    <div class="col-12">
                        <ul class="text-center">
                            <li t-if="current_company_id.street" class="list-inline-item d-inline" style="font-size: 10px !important;">
                                <span t-field="current_company_id.street"/> <span t-field="current_company_id.street2"/>
                            </li>
                            <li t-if="current_company_id.website" class="list-inline-item d-inline" style="font-size: 10px !important;">
                                <span t-field="current_company_id.website"/>
                            </li>
                        </ul>
                        <t t-set="data_report_page_offset" t-value="data['folio_inicial']+1"/>
                        <h6 class="" style="font-size: 10px !important;">Folio: <span class="page" t-esc="data['folio_inicial']-1"></span></h6>
                    </div>
                </div>
            </div>
            <t t-set="data_report_margin_top" t-value="50"/>
            <t t-set="data_report_header_spacing" t-value="40"/>

            <t t-call="web.external_layout">
                <div class="page" style="font-size: 7px !important; margin-top: 15px;">
                    <t t-set="result" t-value="lineas(data)"/>

                    <table class="table table-sm" style="width:100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background-color: #e0e0e0;">
                                <th style="border: 1px solid #ccc; padding: 1px;">Tipo</th>
                                <th style="border: 1px solid #ccc; padding: 1px;">Fecha</th>
                                <th style="border: 1px solid #ccc; padding: 1px;">Serie</th>
                                <th style="border: 1px solid #ccc; padding: 1px;">Numero</th>
                                <th style="border: 1px solid #ccc; padding: 1px;">Cliente</th>
                                <th style="border: 1px solid #ccc; padding: 1px;">NIT</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 1px;">Vent.</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 1px;">Vent. Exe.</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 1px;">Serv.</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 1px;">Serv. Exe.</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 1px;">Exp.</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 1px;">IVA</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 1px;">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="result['lineas']" t-as="l" t-attf-style="background-color: {{ '#ffffff' if l_index % 2 == 0 else '#f9f9f9' }};">
                                <td style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['tipo']"/></td>
                                <td style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['fecha']" t-options='{"widget": "date"}'/></td>
                                <td style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['serie']"/></td>
                                <td style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['numero']"/></td>
                                <td style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['cliente']"/></td>
                                <td style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['nit']"/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['compra']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['compra_exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['servicio']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['servicio_exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['importacion']+l['importacion_exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['iva']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 1px;"><span t-esc="l['total']" t-options='{"widget": "float", "precision": 2}'/></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr style="background-color: #e0e0e0; font-weight: bold;">
                                <td colspan="5" class="text-right" style="border: 1px solid #ccc; padding: 3px;"><b>Totales</b></td>
                                <td style="border: 1px solid #ccc; padding: 3px;"></td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <span t-esc="result['totales']['compra']['neto']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <span t-esc="result['totales']['compra']['exento']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <span t-esc="result['totales']['servicio']['neto']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <span t-esc="result['totales']['servicio']['exento']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <span t-esc="result['totales']['importacion']['neto']+result['totales']['importacion']['exento']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <span t-esc="result['totales']['compra']['iva'] + result['totales']['servicio']['iva'] + result['totales']['importacion']['iva']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <span t-esc="result['totales']['compra']['total'] + result['totales']['servicio']['total'] + result['totales']['importacion']['total']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                    <table style="margin-top: 10px; margin-bottom: 10px;">
                        <tbody>
                            <tr>
                                <td style="padding: 3px;"><b>Cantidad de facturas:</b></td>
                                <td class="text-right" style="padding: 3px;"><span t-esc="'{0:,.0f}'.format(result['totales']['num_facturas'])"/></td>
                            </tr>
                            <tr>
                                <td style="padding: 3px;"><b>Total debito fiscal:</b></td>
                                <td class="text-right" style="padding: 3px;">
                                    <span t-esc="result['totales']['compra']['iva'] + result['totales']['servicio']['iva'] + result['totales']['importacion']['iva']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div style="background-color: #f0f0f0; padding: 5px; margin-top: 10px;"><strong>Resumen:</strong></div>
                    <table class="table table-sm" style="width:100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background-color: #e0e0e0;">
                                <th style="border: 1px solid #ccc; padding: 3px;"></th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 3px;">Exento</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 3px;">Neto</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 3px;">IVA</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 3px;">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="background-color: #ffffff;">
                                <td style="border: 1px solid #ddd; padding: 3px;">Ventas</td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['compra']['exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['compra']['neto']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['compra']['iva']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['compra']['total']" t-options='{"widget": "float", "precision": 2}'/></td>
                            </tr>
                            <tr style="background-color: #f9f9f9;">
                                <td style="border: 1px solid #ddd; padding: 3px;">Servicios</td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['servicio']['exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['servicio']['neto']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['servicio']['iva']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['servicio']['total']" t-options='{"widget": "float", "precision": 2}'/></td>
                            </tr>
                            <tr style="background-color: #ffffff;">
                                <td style="border: 1px solid #ddd; padding: 3px;">Exportaciones</td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['importacion']['exento']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['importacion']['neto']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['importacion']['iva']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 3px;"><span t-esc="result['totales']['importacion']['total']" t-options='{"widget": "float", "precision": 2}'/></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr style="background-color: #e0e0e0; font-weight: bold;">
                                <td style="border: 1px solid #ccc; padding: 3px;"><b>Totales</b></td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <span t-esc="result['totales']['compra']['exento'] + result['totales']['servicio']['exento'] + result['totales']['importacion']['exento']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <span t-esc="result['totales']['compra']['neto'] + result['totales']['servicio']['neto'] + result['totales']['importacion']['neto']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <span t-esc="result['totales']['compra']['iva'] + result['totales']['servicio']['iva'] + result['totales']['importacion']['iva']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;">
                                    <span t-esc="result['totales']['compra']['total'] + result['totales']['servicio']['total'] + result['totales']['importacion']['total']" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
