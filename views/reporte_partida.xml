<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="adroc_reporte_partida">
        <t t-call="web.html_container">
            <div class="header">
                <div class="row">
                    <div class="o_background_header">
                        <div class="row col-xs-12">
                            <div class="col-1">
                                <div class="text-left">
                                    <div>
                                        <img t-if="current_company_id.logo" t-att-src="image_data_uri(current_company_id.logo_web)" style="max-width: 80px; max-height: 60px; object-fit: contain;" alt="Logo"/>
                                        <div class="w-100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center col-11">
                                <div class="text-center">
                                    <div>
                                        <h6 style="font-size: 13px !important;"><span t-esc="current_company_id.name"/></h6>
                                        <h6 style="font-size: 10px !important;"><span t-esc="current_company_id.company_registry"/></h6>
                                        <h6 style="font-size: 10px !important;"><span t-esc="current_company_id.vat"/></h6>
                                        <h6 style="font-size: 10px !important;">Libro partida</h6>
                                        <h6 style="font-size: 10px !important;">Expresado en GTQ</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer">
                <div class="row">
                    <div class="col-12">
                        <ul class="text-center">
                            <li t-if="current_company_id.street" class="list-inline-item d-inline" style="font-size: 10px !important;">
                                <span t-field="current_company_id.street"/> <span t-field="current_company_id.street2"/>
                            </li>
                            <li t-if="current_company_id.website" class="list-inline-item d-inline" style="font-size: 10px !important;">
                                <span t-field="current_company_id.website"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <t t-set="data_report_margin_top" t-value="45"/>
            <t t-set="data_report_header_spacing" t-value="35"/>

            <t t-call="web.external_layout">
                <div class="page" style="font-size: 8px !important;">
                    <t t-foreach="docs" t-as="o">
                        <div>
                            <h2><span t-esc="current_company_id.name"/>: Partida</h2>
                            <div class="row mt32">
                                <div class="col-sm-4">
                                    <strong>Partida:</strong> <span t-field="o.name"/><br/>
                                </div>
                                <div class="col-sm-4">
                                    <strong>Ref:</strong> <span t-field="o.ref"/><br/>
                                </div>
                                <div class="col-sm-4">
                                    <strong>Fecha:</strong> <span t-field="o.date"/>
                                </div>
                            </div>
                            <t t-set="total_debe" t-value="0"/>
                            <t t-set="total_haber" t-value="0"/>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Codigo</th>
                                        <th>Cuenta</th>
                                        <th>Analitica</th>
                                        <th class="text-right">Debe</th>
                                        <th class="text-right">Haber</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.line_ids" t-as="l">
                                        <t t-set="total_debe" t-value="total_debe + l.debit"/>
                                        <t t-set="total_haber" t-value="total_haber + l.credit"/>
                                        <td><span t-field="l.account_id.code"/></td>
                                        <td><span t-field="l.account_id.name"/></td>
                                        <td><span t-field="l.analytic_account_id"/></td>
                                        <td class="text-right">
                                            <span t-field="l.debit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.credit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>Total:</td>
                                        <td></td>
                                        <td class="text-right">
                                            <span t-esc="total_debe" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            <hr style="border-top: 4px double;"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="total_haber" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            <hr style="border-top: 4px double;"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
