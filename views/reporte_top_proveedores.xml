<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="adroc_reporte_top_proveedores">
        <t t-call="web.html_container">
            <div class="header">
                <div class="row">
                    <div class="o_background_header">
                        <div class="row col-xs-12">
                            <div class="col-1">
                                <div class="text-left">
                                    <div>
                                        <img t-if="current_company_id.logo" t-att-src="image_data_uri(current_company_id.logo_web)" style="max-width: 80px; max-height: 60px; object-fit: contain;" alt="Logo"/>
                                        <div class="w-100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center col-11">
                                <div class="text-center">
                                    <div>
                                        <h6 style="font-size: 13px !important;"><span t-esc="current_company_id.name"/></h6>
                                        <h6 style="font-size: 10px !important;"><span t-esc="current_company_id.company_registry"/></h6>
                                        <h6 style="font-size: 10px !important;"><span t-esc="current_company_id.vat"/></h6>
                                        <h6 style="font-size: 10px !important;">Resumen de proveedores y total de documentos</h6>
                                        <h6 style="font-size: 10px !important;">Expresado en GTQ</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer">
                <div class="row">
                    <div class="col-12">
                        <ul class="text-center">
                            <li t-if="current_company_id.street" class="list-inline-item d-inline" style="font-size: 10px !important;">
                                <span t-field="current_company_id.street"/> <span t-field="current_company_id.street2"/>
                            </li>
                            <li t-if="current_company_id.website" class="list-inline-item d-inline" style="font-size: 10px !important;">
                                <span t-field="current_company_id.website"/>
                            </li>
                        </ul>
                        <t t-set="data_report_page_offset" t-value="data['folio_inicial']+1"/>
                        <h6 class="" style="font-size: 10px !important;">Folio: <span class="page" t-esc="data['folio_inicial']-1"></span></h6>
                    </div>
                </div>
            </div>
            <t t-set="data_report_margin_top" t-value="50"/>
            <t t-set="data_report_header_spacing" t-value="40"/>

            <t t-call="web.external_layout">
                <div class="page" style="font-size: 7px !important; margin-top: 15px;">
                    <t t-set="result" t-value="lineas(data)"/>
                    <t t-set="correlativo_proveedor" t-value="1"/>

                    <t t-set="total_documentos" t-value="0"/>
                    <t t-set="total_monto" t-value="0"/>
                    <table class="table table-sm" style="width:100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background-color: #e0e0e0;">
                                <th style="border: 1px solid #ccc; padding: 3px; width: 40px;">#</th>
                                <th style="border: 1px solid #ccc; padding: 3px;">NIT</th>
                                <th style="border: 1px solid #ccc; padding: 3px;">Proveedor</th>
                                <th class="text-center" style="border: 1px solid #ccc; padding: 3px;">No. Doctos</th>
                                <th class="text-right" style="border: 1px solid #ccc; padding: 3px;">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="result['lineas']" t-as="l" t-attf-style="background-color: {{ '#ffffff' if l_index % 2 == 0 else '#f9f9f9' }};">
                                <td class="text-center" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="correlativo_proveedor"/></td>
                                <td style="border: 1px solid #ddd; padding: 2px;"><span t-esc="l['vat']"/></td>
                                <td style="border: 1px solid #ddd; padding: 2px;"><span t-esc="l['display_name']"/></td>
                                <td class="text-center" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="l['cant_documentos']"/></td>
                                <td class="text-right" style="border: 1px solid #ddd; padding: 2px;"><span t-esc="l['total_facturas']" t-options='{"widget": "float", "precision": 2}'/></td>
                                <t t-set="correlativo_proveedor" t-value="correlativo_proveedor + 1"/>
                                <t t-set="total_documentos" t-value="total_documentos + l['cant_documentos']"/>
                                <t t-set="total_monto" t-value="total_monto + l['total_facturas']"/>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr style="background-color: #e0e0e0; font-weight: bold;">
                                <td colspan="3" class="text-right" style="border: 1px solid #ccc; padding: 3px;"><b>Totales</b></td>
                                <td class="text-center" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;"><span t-esc="total_documentos"/></td>
                                <td class="text-right" style="border: 1px solid #ccc; padding: 3px; border-top: 2px solid #333;"><span t-esc="total_monto" t-options='{"widget": "float", "precision": 2}'/></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
