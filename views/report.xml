<odoo>

    <!-- Libro de Banco -->
    <record id="adroc_asistente_reporte_banco_view_form" model="ir.ui.view">
        <field name="name">adroc_libros_guatemala.asistente_reporte_banco.form</field>
        <field name="model">adroc_libros_guatemala.asistente_reporte_banco</field>
        <field name="arch" type="xml">
            <form string="Libro de Banco">
                <group>
                    <group>
                        <field name="cuenta_bancaria_id" />
                        <field name="folio_inicial" />
                    </group>
                    <group>
                        <field name="fecha_desde" />
                        <field name="fecha_hasta" />
                        <field name="name" invisible="1" />
                        <field name="archivo" filename="name" />
                    </group>
                </group>
                <footer>
                    <button name="print_report" string="Imprimir PDF" type="object" class="oe_highlight" />
                    <button name="print_report_excel" string="Exportar Excel" type="object" class="oe_highlight" />
                    <button string="Cancelar" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_adroc_asistente_reporte_banco" model="ir.actions.act_window">
        <field name="name">Libro de Banco</field>
        <field name="res_model">adroc_libros_guatemala.asistente_reporte_banco</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_adroc_reporte_banco" model="ir.actions.report">
